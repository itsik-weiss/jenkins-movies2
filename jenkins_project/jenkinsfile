pipeline{
    agent any
    stages{
        stage("build image"){
            steps{
                sh 'pwd'
                sh 'ls -la'
                dir('jenkins_project'){
                    sh 'ls -la'
                    sh 'docker build -t movies-jenkins:v1 .'
                }
            }
            post{
                always{
                    sh 'docker rm -f $(docker ps -qa)'
                    sh 'rm -f Dockerfile'
                }
                success{
                    echo 'well done'
                }
                failure{
                    echo 'ooops'
                }
            }
        }
        stage("test"){
            steps{
                sh 'docker run -d -p 8090:80 movies-jenkins:v1'
                sh 'sleep 5 && docker ps'
            }
        }
    }
}