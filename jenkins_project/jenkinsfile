pipeline{
    agent any
    stages{
        stages("build"){
            step{
                sh 'pwd'
                sh 'docker build -t movies-jenkins:v1 .'
            }
            post{
                always{
                    sh 'rm -f Dockerfile'
                }
                success{
                    echo 'well done'
                }
                failure{
                    echo 'ooops'
                }
            }
        }
        stages("test"){
            step{
                sh 'docker run -d -p 8090:80 movies-jenkins:v1'
                sh 'sleep 5 && timeout 5 ping localhost:8090 -c 4 -p 8090'
            }
        }
    }
}